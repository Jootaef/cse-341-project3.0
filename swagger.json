        },
        "lastName": {
          "type": "string",
          "example": "Doe"
        },
        "departmentId": {
          "type": "string",
          "example": "d001"
        },
        "jobTitle": {
          "type": "string",
          "example": "Software Engineer"
        },
        "salary": {
          "type": "number",
          "example": 75000
        }
